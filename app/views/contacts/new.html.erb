<div class="container">
  <div align="center">
  <br><h1>Contact Us</h1><br>

<div class="col-md-6 col-md-offset-3">

  <%= form_for @contact do |f| %>
  <br>
    <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', :required => true %>
    </div>
    <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control', :required => true %>
    </div>
    <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', :as => :text, :required => true %>
    </div>
    <div class="form-group">
    <%= f.label :message %>
    <%= f.text_area :message, class: 'form-control', :as => :text, :required => true %>
    </div>
    <div>
      </br>
      <%= f.submit 'Send message', class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
</div>
</div>
</div>