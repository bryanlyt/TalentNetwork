<li class="dropdown">
  <%= link_to '#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown' do %>
    <p>Signed in as <%= current_user %>
    <span class="caret"></span></p>
  <% end %>
  <ul class="dropdown-menu">
    <li>
      <%= link_to t(:my_profile), user_path(current_user) %>
    </li>
    <li>
      <%= link_to t(:edit_profile), edit_user_registration_path %>
    </li>
    <li class="divider"></li>
    <% if can? :new, Project %>
      <li>
        <%= link_to 'Add Project', new_project_path %>
      </li>
    <% end %>
    <% if can? :new, Talent %>
      <li>
        <%= link_to 'Add Talent Role', new_talent_path %>
      </li>
    <% end %>
    <li class="divider"></li>
    <li>
      <%= link_to t(:sign_out), destroy_user_session_path, method: :delete %>
    </li>
  </ul>
</li>
