<div class="page-header">
  <h1>
    User Profiles
  </h1>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th>
        <%= t(:name) %>
      </th>
      <th>
        <%= t(:interested_in) %>
      </th>
      <th>
        <%= t(:contact) %> (to be replaced with built-in message function)
      </th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user.to_s, user, :target => "_blank" %>
        </td>
        <td class="hidden-xs">
          <% user.tag_names.each do |name| %>
            <span class="label label-info">
              <%= name %>
            </span>
          <% end %>
        </td>
        <td>
          <%= user.email %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
