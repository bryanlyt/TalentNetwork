<div class="page-header">
  <h1>
    User Profiles
  </h1>



</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th>
        <%= t(:name) %>
      </th>
      <th>
        <%= t(:city) %> 
      </th>
      <th>
        <%= t(:country) %>
      </th>
      <th>
        <%= t(:interested_in) %>
      </th>
      <th>
        
      </th>      
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user.to_s, user, :target => "_blank" %>
        </td>
        <td>
          <%= user.city %>
        </td>
        <td>
          <%= user.country %>
        </td>
        <td class="hidden-xs">
          <% user.tag_names.each do |name| %>
            <span class="label label-info">
              <%= name %>
            </span>
          <% end %>
        </td>
        <td>
          <% unless current_user == user %>
            <%= link_to 'Message', new_message_path(to: user.id), class: 'btn btn-default btn-sm' %>
          <% end %>          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
