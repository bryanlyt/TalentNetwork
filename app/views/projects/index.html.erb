<div class="container">
  <div class="page-header">
  <h1>
    Available Projects &nbsp;
    <%= link_to 'Add New', new_project_path, class: 'btn btn-info', :method => :get %>

  </h1>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th>
        <%= t(:name) %>
      </th>
      <th>
        <%= t(:location) %>
      </th>
      <th>
        <%= t(:updated_at) %>
      </th>
      <th>
        Created by
      </th>      
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td>
          <%= link_to project, project %>
        </td>
        <td>
          <%= project.location %>
        </td>
        <td>
          <%= project.updated_at.to_formatted_s(:long) %>
        </td>
        <td>
          <%= project.creator %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>