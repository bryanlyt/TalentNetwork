<div class="page-header">
  <h1>
    <%= @project %>
  </h1>
</div>
<div class="row">
  <div class="col-md-6">
    <%= render 'location' %>
  </div>
  <div class="col-md-6">
    <%= render 'talents' %>
  </div>
</div>
<% if can? :manage, @project %>
  <%= link_to t(:edit, name: Project), %>
    edit_project_path(@project),
    class: 'btn btn-default'
  <% end %>
  <%= link_to t(:delete, name: Project), %>
    project_path(@project),
    method: :delete,
    'data-confirm' => t(:are_you_sure),
    class: 'btn btn-default'
  <% end %>
<% end %>
