<h1>
  <%= @project.persisted? ? t(:edit, name: @project) : t(:new, name: t(:project, count: 1)) %>
</h1>
<%= form_for @project, html: { id: 'project_form' } do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :location %>
    <%= f.text_field :location, required: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <%= f.submit nil, class: 'btn btn-default btn-block' %>
<% end %>
