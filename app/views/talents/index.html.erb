<div class="container">
  <div class="page-header">
  <h1>
    Available Talent Roles &nbsp;
    <%= link_to 'Add New', new_talent_path, class: 'btn btn-info', :method => :get %>
  </h1>
</div>
<% if @talents.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>
          <%= t(:name) %>
        </th>
        <th class="hidden-xs">
          <%= t(:tag, count: 2) %>
        </th>

        <th>
          <%= t(:project, count: 1) %>
        </th>
        <th class="hidden-xs">
          <%= t(:location) %>
        </th>
        <th>
          <%= t(:payment) %>
        </th>
        <th>
          <%= t(:updated_at) %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @talents.each do |talent| %>
        <tr>
          <td>
            <%= link_to talent.name, talent %>
          </td>
          <td class="hidden-xs">
            <% talent.tag_names.each do |name| %>
              <span class="label label-info">
                <%= name %>
              </span>
            <% end %>
          </td>
          <td>
            <%= link_to talent.project_name, talent.project %>
          </td>
          <td class="hidden-xs">
            <%= talent.project_location %>
          </td>
          <td>
            <%= check_box_tag nil, nil, talent.payment, disabled: true %>
          </td>
          <td>
            <%= talent.updated_at.to_formatted_s(:long) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate(@talents) %>
<% else %>
  <br>
  <h3 class="text-center">
    <%= t(:no_suitable_roles_for_you)%>
  </h3>
  <h5 class="text-center">
    Go to <%= link_to 'Edit Profile', edit_user_registration_path, :target => "_blank" %> & add some relevant tags for yourself.
  </h5>
<% end %>
</div>