<li class="dropdown">
  <%= link_to '#', class: 'dropdown-toggle', 'aria-expanded' => false, 'data-toggle' => 'dropdown' do %>
    <%= t(:sign_in) %>
    <span class="caret"></span>
  <% end %>
  <div class="dropdown-menu padded">
    <%= form_tag session_path(:user), class: 'min-200' do %>
      <div class="form-group">
        <%= text_field_tag 'user[email]', nil, class: 'form-control', placeholder: t(:email) %>
      </div>
      <div class="form-group">
        <%= password_field_tag 'user[password]', nil, class: 'form-control', placeholder: t(:password) %>
      </div>
      <div class="checkbox">
        <label>
          <%= check_box_tag 'user[remember_me]' %>
          <%= t(:remember_me) %>
        </label>
      </div>
      <%= submit_tag t(:sign_in), class: 'btn btn-primary btn-block' %>
    <% end %>
    <div class="divider"></div>
    <%= link_to user_omniauth_authorize_path(:facebook), class: 'btn btn-primary btn-block' do %>
      <i class="fa fa-lg fa-facebook"></i>
      <%= t(:sign_in_with, provider: 'Facebook') %>
    <% end %>
    <div class="divider"></div>
    <%= link_to t(:forgot_password), new_password_path(:user) %>
    <%= ' | ' %>
    <%= link_to t(:sign_up), new_registration_path(:user) %>
  </div>
</li>

