<% page_header "Conversation" %>

<p>Chatting with
  <%= @conversation.to_s %>
</p>

<div class="panel panel-default">
  <div class="panel-heading"><%= @conversation.subject %></div>

  <div class="panel-body">
    <div class="messages">
      <% @conversation.receipts_for(current_user).each do |receipt| %>
        <div class="media">
          <% message = receipt.message %>
          <div class="media-left">
            <% unless message.sender.avatar_url.nil? %><%= image_tag message.sender.avatar_url(:thumbnail) %><% end %>
          </div>

          <div class="media-body">
            <h6 class="media-heading"><%= link_to message.sender.to_s, message.sender, :target => "_blank" %>
              says at <%= message.created_at.strftime("%-d %B %Y, %H:%M:%S") %></h6>
            <%= message.body %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

<%= form_tag reply_conversation_path(@conversation), method: :post do %>
  <div class="form-group">
    <%= text_area_tag 'body', nil, cols: 3, class: 'form-control', placeholder: 'Type something...', required: true %>
  </div>
  <%= submit_tag "Send Message", class: 'btn btn-primary' %>
<% end %>

</div>

